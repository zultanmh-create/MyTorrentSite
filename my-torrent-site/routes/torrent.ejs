const express = require('express');
const router = express.Router();
// Assume you have a Torrent model that interacts with your database
const Torrent = require('../models/Torrent');

router.get('/torrents/:category', async (req, res) => {
  try {
    const category = req.params.category;
    const page = parseInt(req.query.page) || 1;
    const limit = 10;
    const skip = (page - 1) * limit;

    // Query the total count and the current page items
    const totalTorrents = await Torrent.countDocuments({ category });
    const torrents = await Torrent.find({ category })
                                  .skip(skip)
                                  .limit(limit)
                                  .sort({ time: -1 }); // or any other sorting

    // Render a view that uses the generic torrent list partial
    // For instance, in your 'torrents.ejs' view:
    res.render('torrents', {
      categoryTitle: category.toUpperCase() + ' TORRENTS',
      subCategories: 'POPULAR THIS WEEK | TRENDING THIS WEEK',
      torrents,
      totalTorrents,
      currentPage: page,
      limit
    });
  } catch (err) {
    console.error(err);
    res.status(500).send('Server Error');
  }
});

module.exports = router;
